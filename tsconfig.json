{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonJs",
    "declaration": true,
    "jsx": "react-native",
    "outDir": "lib",
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
